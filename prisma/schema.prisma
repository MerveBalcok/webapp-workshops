generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Workshop {
  id               Int      @id @default(autoincrement())
  title            String
  date             DateTime
  location         String
  cost             Float
  imageUrl         String? // Pfad zum Workshop-Bild, optional
  instagramPostUrl String? // Neuer Feld f√ºr den Instagram-Beitrag-URL
  Verein           Verein?  @relation(fields: [vereinId], references: [id])
  vereinId         Int?
}

model Verein {
  id                  Int        @id @default(autoincrement())
  name                String
  avatarUrl           String? // Pfad zum Avatar-Bild
  instagramProfileUrl String? // URL zum Instagram-Profil des Vereins, optional
  workshops           Workshop[]
}
